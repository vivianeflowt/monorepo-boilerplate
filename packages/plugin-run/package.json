{
  "name": "@plugin/run",
  "version": "0.0.0",
  "description": "@guru/cli",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "guru-run": "./bin/guru-run"
  },
  "files": [
    "lib",
    "!*.map"
  ],
  "directories": {
    "test": "test",
    "bin": "bin"
  },
  "scripts": {
    "commit": "cz",
    "build": "rimraf lib && tsc --build && pnpm run bundle && pnpm run lint --fix",
    "bundle": "esbuild ./src/index.ts --bundle --platform=node --target=node10 --minify --loader:.ts=ts --outfile=./lib/cli.js",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "start": "tsc --watch",
    "test": "pnpm run build && jest --logHeapUsag",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@guru/cli": "link:../cli",
    "@guru/core": "workspace:^0.0.0",
    "@guru/fp": "workspace:^0.0.0",
    "@utils/tsconfig": "link:../../utils/tsconfig",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "commander": "^9.2.0",
    "execa": "^6.1.0",
    "lodash": "^4.17.21",
    "ora": "^6.1.0"
  },
  "pnpm": {
    "overrides": {
      "@guru/cli": "../cli/src/index.ts",
      "quux": "npm:@myorg/quux@^1.0.0",
      "bar@^2.1.0": "3.0.0",
      "qar@1>zoo": "2"
    }
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@types/rimraf": "^3.0.2",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "rimraf": "^3.0.2",
    "syncpack": "^7.2.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  },
  "exports": {
    ".": "./lib/index.js"
  }
}