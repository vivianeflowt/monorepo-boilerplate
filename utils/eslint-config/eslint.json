{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true,
        "jest/globals": true
    },
    "extends": [
        "xo",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort",
        "prettier",
        "jest"
    ],
    "rules": {
        "prettier/prettier": "error",
        "simple-import-sort/exports": "error",
        "simple-import-sort/imports": "error",
        "new-cap": "off",
        "capitalized-comments": "off",
        "no-unused-vars": "off"
    }
}