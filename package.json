{
  "name": "root",
  "version": "0.0.1",
  "private": "true",
  "engines": {
    "node": ">=12.6",
    "pnpm": ">=6.14.1"
  },
  "scripts": {
    "commit": "cz",
    "fix": "pnpm run format && syncpack format && syncpack list-mismatches && pnpm run lint",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "syncpack list-mismatches && eslint **/src/**/*.ts --fix",
    "preinstall": "npx only-allow pnpm",
    "release": "release-it --verbose -c ./utils/release/.release-it.js --dry-run",
    "reset": "./scripts/reset.sh",
    "setup": "./setup",
    "test": "pnpm test --recursive --stream --if-present",
    "typesync": "typesync"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/prettier": "^2.6.0",
    "@types/rimraf": "^3.0.2",
    "@utils/eslint-config": "link:utils/eslint-config",
    "@utils/tsconfig": "link:utils/tsconfig",
    "benny": "^3.7.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "ts-jest": "27.1.4",
    "ts-node": "^10.7.0",
    "ts-toolbelt": "^9.6.0",
    "tslib": "^2.4.0",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}
